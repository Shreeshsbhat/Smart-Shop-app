<?xml version="1.0"?>
<FrameLayout
    android:background="#f7a67e"
    android:padding="16dp"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.CardView
        android:layout_height="380dp"
        android:layout_width="match_parent"
        android:layout_gravity="left|center_vertical"
        android:id="@+id/cv"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_form_rounded">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="25dp">
            <TextView android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center" android:textStyle="bold"
                android:textColor="#FFF77732" android:textSize="25sp"
                android:text="Login "
                android:textIsSelectable="false" />
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:weightSum="100">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" android:id="@+id/tvPhoneNo"
                    android:gravity="center" android:textStyle="bold"
                    android:textColor="#FFF77732" android:text="Phone No"
                    android:layout_weight="28"
                    android:textSize="18sp" />
                <EditText android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/phone_no_input" android:layout_weight="72"
                    android:singleLine="true" android:layout_gravity="center_horizontal|top"
                    android:layout_marginRight="25dp" android:inputType="number"/>
            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical|center_horizontal"
                android:weightSum="100">
                <TextView android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/tvPasword"
                    android:gravity="center"

                    android:textStyle="bold"
                    android:textColor="#FFF77732"
                    android:text="Password"
                    android:layout_weight="25"
                    android:textSize="18sp" />
                <EditText
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal|top"
                    android:id="@+id/password_input"
                    android:layout_weight="75" android:singleLine="true"
                    android:layout_marginRight="25dp"
                    android:inputType="textPassword"/>
            </LinearLayout>
            <CheckBox android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/checkBox2" android:text="Show Password"
                android:textColor="#4b4a49" />
            <LinearLayout android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_marginTop="40dp">
                <Button android:layout_height="50dp"
                    android:layout_width="120dp"
                    android:layout_gravity="center"
                    android:id="@+id/register_button"
                    android:textStyle="bold"
                    android:background="@drawable/bg_button_rounded"
                    android:textColor="#000000"
                    android:text="Login" style="?android:textAppearanceSmall"
                    android:textSize="20sp" />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/tvNotYetRegister"
                    android:layout_marginTop="18dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="#0a0a0a"
                    android:text="Not Yet Registered?"
                    style="?android:textAppearanceSmall"
                    android:textSize="15sp" />
            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>