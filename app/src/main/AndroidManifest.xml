<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.klecim.smartshopapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/smart"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".Admin.Login"
            android:label="@string/login">

        </activity>
        <activity android:name=".Home.SetAmount"
            android:label="@string/amt" />
        <activity android:name=".Admin.Register"
            android:label="@string/register"/>
        <activity android:name=".Home.HomePage"

            android:label="@string/home"/>

        <activity android:name=".Home.FinalBillAndItems" />
    </application>

</manifest>